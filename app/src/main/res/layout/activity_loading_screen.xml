<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".LoadingScreenActivity"
    android:padding="15dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="324dp"
        android:src="@drawable/imgloading"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WE ARE ONE"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="38dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:text="Chúng tôi sẽ kết nối  “âm thanh” của
bạn đến với mọi người"
            android:gravity="center"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="72dp"
        android:background="@drawable/boder_button"
        android:text="Sign up"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:padding="20dp"
        android:id="@+id/btnsignup"
        android:backgroundTint="@color/purple_500"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="skip"
        android:textColor="#5667FD"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:id="@+id/txtskip"/>

</LinearLayout>